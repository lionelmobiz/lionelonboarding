{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "put","get"
      ],
      "route": "update/{clientId}/{id}"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "contactToUpdate",
      "databaseName": "practice-db",
      "collectionName": "contacts",
      "sqlQuery": "SELECT * from c where c.clientId = {clientId} and c.id={id}",
      "connectionStringSetting": "lionelonboarding_DOCUMENTDB"
      
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "contact",
      "databaseName": "practice-db",
      "collectionName": "contacts",
      "createIfNotExists": false,
      "connectionStringSetting": "lionelonboarding_DOCUMENTDB"
    }
  ],
  "scriptFile": "../dist/updateContact/index.js"
}